{
  "name": "@bytriska/ts-package-starter",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.27.0",
  "description": "Use this template to quickly start a project with typescript and pnpm",
  "author": {
    "name": "Triska Mahfud K",
    "email": "im.triskuy@gmail.com",
    "url": "https://github.com/bytriska"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/bytriska",
  "homepage": "https://github.com/bytriska/ts-package-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytriska/ts-package-starter.git"
  },
  "bugs": "https://github.com/bytriska/ts-package-starter/issues",
  "keywords": [],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --clean --shims --minify",
    "start": "node ./dist/index.js",
    "release": "pnpm test && bumpp",
    "lint": "eslint --cache . && prettier --cache --check .",
    "lint:fix": "eslint --cache --fix . && prettier --cache --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "lint-staged": "^16.2.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.2",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.0",
    "prettier": "3.8.1",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,json,yaml,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
